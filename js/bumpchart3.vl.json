{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bump chart for Ranking Happiness",
  "title": {
    "text": "Ranking of Southeast Asia Countries based on Ladder Score",
    "fontSize": 16
  },
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/thieneng123/FIT3179/main/data/bumpchart.csv"
  },
  "layer": [
    {
      "selection": {
        "countrySelect": {
          "type": "multi",
          "fields": ["Country"],
          "bind": "legend"
        }
      },
      "mark": {"type": "line", "size": 2, "point": true},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "title": "Year",
            "titleFontSize": 14,
            "values": [
              2010,
              2011,
              2012,
              2013,
              2014,
              2015,
              2016,
              2017,
              2018,
              2019,
              2020
            ],
            "labelFontSize": 14
          }
        },
        "y": {
          "field": "Rank",
          "type": "quantitative",
          "sort": "descending",
          "axis": {
            "title": "Rank",
            "titleFontSize": 14,
            "values": [1, 2, 3, 4, 5, 6, 7, 8, 9],
            "labelFontSize": 14
          }
        },
        "color": {
          "field": "Country",
          "scale": {"scheme": "dark2"},
          "legend": {"labelFontSize": 12, "titleFontSize": 12}
        },
        "opacity": {
          "condition": {"selection": "countrySelect", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Rank", "type": "quantitative", "title": "Rank"}
        ]
      }
    }
  ],
  "config": {"style": {"cell": {"stroke": "gray"}}}
}